{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "acm clang++",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++11",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "shell",
			"label": "lldb test",
			"command": "lldb ${fileBasenameNoExtension}",
			"problemMatcher": []
		},
	]
}