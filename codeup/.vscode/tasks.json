{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: build with /usr/bin/clang++",
			"command": "/usr/bin/clang++",
			// "command": "/usr/bin/g++",
			"args": [
				"-std=c++11",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "lldb test",
			"command": "lldb ${fileBasenameNoExtension}",
			"problemMatcher": []
		},
		{
			"label": "Open Terminal",
			"type": "shell",
			"command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
			"problemMatcher": []
		},
	]
}