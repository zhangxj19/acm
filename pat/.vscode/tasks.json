{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "pat clang++ clang and lldb flags",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++14",
				"-fstandalone-debug",
				"-DDEBUG",
				"-DLOCAL",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "shell",
			"label": "lldb test",
			"command": "lldb ${fileBasenameNoExtension}",
			"problemMatcher": [],
			"group": "build"
				
		}
	]
}